# OpenAI API key (optional if using Ollama)
OPENAI_API_KEY=your_openai_api_key_here

# Groq API key (optional if using Ollama)
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face API key (optional)
HUGGINGFACEHUB_API_TOKEN=your_huggingface_api_token_here

# Weather API key
WEATHER_API_KEY=your_weather_api_key_here

# Booking API key
BOOKING_API_KEY=your_booking_api_key_here

# Search API Key
SERPAPI_API_KEY=your_serpapi_key_here

# Amadeus API (Flights)
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret

# RapidAPI (Hotels)
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=booking-com15.p.rapidapi.com

# Numbeo API (Cost of living)
NUMBEO_API_KEY=your_numbeo_api_key

# --- LLM Configuration ---
# Options: groq, openai, ollama, huggingface
LLM_PROVIDER=ollama
# Model name (e.g. mistral for Ollama, gpt-4 for OpenAI)
LLM_MODEL=mistral
OLLAMA_MODEL=mistral
LLM_TEMPERATURE=0.0

# Environment setting
ENV=development
